# CleanPro Environment Variables
# Copy this file to .env and adjust the values for your environment

# Flask settings
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your_strong_secret_key_here
DEBUG=True
PORT=5000

# Database settings
DATABASE_URL=postgresql://cleanpro:cleanpro@db:5432/cleanpro
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=cleanpro
DATABASE_USER=cleanpro
DATABASE_PASSWORD=cleanpro

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
S3_BUCKET=

